{% extends ":template:layout.html.twig" %}

{% block title %}All Users{% endblock %}
{% block page_title  %}
    All Registered Users
{% endblock page_title %}

{% block page_name  %}
    <i class="fa fa-home"></i> Users
{% endblock page_name %}

{% block actions %}
    <a class="btn btn-primary btn-m purple"
       href="{{ path('admin_add_user') }}"><i
                class="fa fa-plus"></i> Add User</a>
{% endblock actions %}

{% block content %}
    <div class="col-md-12">
        <div class="">
            <table id="part-table" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Location</th>
                    <th>Admin</th>
                    <th>Enabled</th>
                    <th>Last Login</th>
                    <th>Actions</th>
                </tr>
                </thead>
                {% for user in users %}
                    <tr>
                        <td>
                            {{ user.firstName |e }} {{ user.lastName |e }}
                        </td>
                        <td>
                            {{ user.username }}
                        </td>
                        <td>
                            {{ user.email |e }}
                        </td>
                        <td>
                            {% if user.office %}
                                {{ user.office.name }}
                            {% endif %}
                        </td>
                        <td>
                            {{ user.hasRole('ROLE_ADMIN') ? 'Yes' : 'No' }}
                        </td>
                        <td>
                            {{ user.enabled ? 'Yes' : 'No' }}
                        </td>
                        <td>
                            {{ user.lastLogin |date("F jS \\a\\t g:ia") }}
                        </td>
                        <td>
                            <a class="btn btn-info btn-xs"
                               href="{{ path('admin_edit_user', {'user_id': user.id}) }}"><i
                                        class="fa fa-edit"></i> Edit</a>
                            <button class="btn btn-default btn-xs purple"
                                    onclick="removeUser({{ user.id }})"><i
                                        class="fa fa-trash"></i> delete
                            </button>
                        </td>
                    </tr>
                {% endfor %}

            </table>
        </div>
    </div>
{% endblock content %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable();

            $('a.btn[data-role="delete-user"]').on('click', function (e) {
                return confirm("Are you sure you want to delete this user?");
            });
        });

            $('#part-table').DataTable({
                "paging": false
            });

            $('a.btn[data-role="delete-user"]').on('click', function (e) {
                return confirm("Are you sure you want to delete this user?");
            });

        function removeUser(id) {
            if (confirm("Are you sure you want to delete this user?")) {
                var url = "{{ path('admin_delete_user', {'id': 'to_delete_id'}) }}";
                url = url.replace("to_delete_id", id);
                window.location = url;
            }
        }
    </script>
{% endblock footer %}