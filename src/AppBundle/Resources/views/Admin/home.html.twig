{% extends ":template:layout.html.twig" %}

{% block title %}
    Home
{% endblock title %}

{% block page_title  %}
    <style>
        .page-bar {
            display: none;
        }

        @media (min-width: 1200px) {
            .container {
                width: 970px !important;
            }
        }
    </style>
{% endblock page_title %}

{% block page_name  %}
    Dashboard
{% endblock page_name %}

{% block content %}
    <div class="container">
        <div class="row stats-overview-cont">
            <div class="col-md-3">
                <div class="stats-overview stat-block">
                    <div class="details">
                        <div class="title">
                            <center>Completed Orders</center>
                        </div>
                        <hr>
                        <div class="numbers"
                             style="margin-bottom: 15px; margin-top: 15px;font-size: 27px;font-weight: 600;">
                            <center class="text-success">{{ num_approved }}</center>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-overview stat-block">
                    <div class="details">
                        <div class="title">
                            <center>Users</center>
                        </div>
                        <hr>
                        <div class="numbers"
                             style="margin-bottom: 15px; margin-top: 15px;font-size: 27px;font-weight: 600;">
                            <center>{{ num_users }}</center>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-overview stat-block">
                    <div class="details">
                        <div class="title">
                            <center>Parts</center>
                        </div>
                        <hr>
                        <div class="numbers"
                             style="margin-bottom: 15px; margin-top: 15px;font-size: 27px;font-weight: 600;">
                            <center>{{ num_parts }}</center>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-overview stat-block">
                    <div class="details">
                        <div class="title">
                            <center>Offices</center>
                        </div>
                        <hr>
                        <div class="numbers"
                             style="margin-bottom: 15px; margin-top: 15px;font-size: 27px;font-weight: 600;">
                            <center>{{ num_offices }}</center>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr>
        <br>

        <div class="row ">
            <div class="col-md-12">
                <div class="portlet">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-bell"></i>SUBMITTED ORDERS TO BE APPROVED
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable">
                            <table class="table table-striped table-bordered table-hover">
                                {% if submitted %}
                                    <thead>
                                    <tr>
                                        <th>
                                            DATE SUBMITTED
                                        </th>
                                        <th>
                                            OFFICE
                                        </th>
                                        <th>
                                            SUBMITTED BY
                                        </th>
                                        <th>
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for item in submitted %}
                                        <tr>
                                            <td>
                                                {{ item.submitDate | date('m/d/y   h:m A') }}
                                            </td>
                                            <td>
                                                {{ item.office.name ? item.office.name : 'yo' }}
                                            </td>
                                            <td>
                                                {{ item.user.firstName }} {{ item.user.lastName }}
                                            </td>
                                            <td style="width: 60px;">
                                                <a href="{{ path('admin_order_edit', {'cart_id': item.id}) }}"
                                                   class="btn btn-danger btn-xs">Approve</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                {% else %}
                                    <div>
                                        <h3>There are no submitted orders that need review right now.</h3>
                                    </div>
                                {% endif %}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row ">
            <div class="col-md-12">
                <div class="portlet">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-bell"></i>RECENTLY APPROVED
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable">
                            <table class="table table-striped table-bordered table-hover">
                                {% if approved %}
                                    <thead>
                                    <tr>
                                        <th>
                                            DATE APPROVED
                                        </th>
                                        <th>
                                            OFFICE
                                        </th>
                                        <th>
                                            SUBMITTED BY
                                        </th>
                                        <th>
                                            APPROVED BY
                                        </th>
                                        <th>

                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for item in approved %}
                                        <tr>
                                            <td>
                                                {{ item.submitDate | date('m/d/y   h:m A') }}
                                            </td>
                                            <td>
                                                {{ item.office.name ? item.office.name : 'yo' }}
                                            </td>
                                            <td>
                                                {{ item.user.firstName }} {{ item.user.lastName }}
                                            </td>

                                            <td>
                                                {{ item.approvedBy.firstName }} {{ item.approvedBy.lastName }}
                                            </td>
                                            <td style="width: 60px;">
                                                <a href="{{ path('admin_order_approve', {'cart_id': item.id}) }}"
                                                   class="btn btn-default btn-xs">View</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                {% else %}
                                    <div>
                                        <h3>There are no submitted orders that need review right now.</h3>
                                    </div>
                                {% endif %}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    </div>
{% endblock content %}