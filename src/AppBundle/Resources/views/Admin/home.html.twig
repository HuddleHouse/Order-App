{% extends ":template:layout.html.twig" %}

{% block title %}
    Home
{% endblock title %}

{% block page_title  %}
    <style>
        .page-bar {
            display: none;
        }

        @media (min-width: 1200px) {
            .container {
                width: 970px !important;
            }
        }

        .dataTables_length > label {
            padding-left: 5px;
            padding-top: 2px;
        }
    </style>

{% endblock page_title %}

{% block page_name  %}
    Dashboard
{% endblock page_name %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            $('a.btn-remove-cart').on('click', function () {
                return confirm('Are you sure you want to delete this order?');
            });
        })
        $(document).ready(function() {
            $('#recently-approved').dataTable();
        });
    </script>
{% endblock %}

{% block content %}

    <div class="row" style="margin-left: 0px; margin-right: 0px;">
        {% if submitted %}
        <div class="row ">
            <div class="col-md-12">
                <div class="portlet">
                    <div class="portlet-title" style="background-color: #f2dede !important;">
                        <div class="caption">
                            <i class="fa fa-bell"></i>SUBMITTED ORDERS TO BE APPROVED
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>
                                        DATE SUBMITTED
                                    </th>
                                    <th>
                                        OFFICE
                                    </th>
                                    <th>
                                        SUBMITTED BY
                                    </th>
                                    <th>
                                        NUMBER OF ITEMS
                                    </th>
                                    <th>
                                        ORDER #
                                    </th>
                                    <th>
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for item in submitted %}
                                    <tr>
                                        <td>
                                            {{ item.submit_date | date('m/d/y   h:i A') }}
                                        </td>
                                        <td>
                                            {{ item.office_name ? item.office_name : ' ' }}
                                        </td>
                                        <td>
                                            {{ item.submitted_by ? item.submitted_by : ' ' }}
                                        </td>
                                        <td>
                                            <center>
                                                {{ item.items }}
                                            </center>
                                        </td>
                                        <td>
                                            <center>{{ item.order_number }}</center>
                                        </td>
                                        <td style="width: 60px;">
                                            <a href="{{ path('admin_order_edit', {'cart_id': item.id}) }}"
                                               class="btn btn-info btn-xs">Approve</a>
                                            <a href="{{ path('admin_order_delete', {'id': item.id}) }}"
                                               class="btn-remove-cart btn btn-danger btn-xs">Remove</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}


