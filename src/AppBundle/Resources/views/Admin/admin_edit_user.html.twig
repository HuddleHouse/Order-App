{% extends ":template:layout.html.twig" %}

{% block title %}Edit User{% endblock %}
{% block page_title %}
    Edit User
{% endblock page_title %}

{% block page_name %}
    <i class="fa fa-home"></i> Users
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block content %}
    {% if not form.vars.valid %}
        <div class="col-md-12">
            <div class="bs-callout bs-callout-danger ">
                {{ form_errors(form.username) }}
                {{ form_errors(form.email) }}
                {{ form_errors(form.current_password) }}
            </div>
        </div>
    {% endif %}

    <div class="container">
        <div class="portlet-body form">
            <div class="form-body">
                {{ password }} sdf
                {{ form_start(form, { 'action': path('admin_edit_user', { 'user_id': user_id }), 'attr': { 'class': 'form-group' } }) }}
                <h3 class="form-section">Edit Employee Info</h3>
                <div class="row">
                    <div class="col-md-4">
                        {{ form_label(form.first_name) }}
                        {{ form_widget(form.first_name) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_label(form.last_name) }}
                        {{ form_widget(form.last_name) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        {{ form_label(form.password) }}
                        {{ form_widget(form.password) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        {{ form_label(form.office) }}
                        {{ form_widget(form.office) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        {{ form_label(form.enabled) }}
                        {{ form_widget(form.enabled) }}
                    </div>
                </div>
                <div style="padding-top: 20px;">
                    <input class="btn btn-success" type="submit" value="Update"/>
                </div>
            </div>

        </div>

    </div>
    {{ form_end(form) }}
{% endblock content %}