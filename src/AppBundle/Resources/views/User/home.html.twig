{% extends ":template:layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block page_title  %}


    <style>
        .page-bar {
            display: none;
        }
    </style>
{% endblock page_title %}

{% block page_name %}

{% endblock page_name %}

{% block content %}
    <div ng-app="myShoppingList" ng-controller="myCtrl" ng-init="init()">
        <div class="container">
            <div class="col-md-3 col-sm-4">
                <div class="stats-overview stat-block">
                    <div class="display stat ok huge">

                    </div>
                    <div class="details">
                        <div class="title">

                            Office Information
                        </div>
                        <hr>
                        <div class="numbers">
                            Office #40
                        </div>
                        <div class="title user-info">
                            Knoxville, TN
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-4">
                <div class="stats-overview stat-block">
                    <div class="display stat ok huge">

                    </div>
                    <div class="details">
                        <div class="title">
                            Current User
                        </div>
                        <hr>
                        <div class="numbers">
                            Matt Huddleston

                        </div>
                        <div class="title user-info">
                            Last Login:
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-sm-4 col-md-offset-4">
                <div class="stats-overview stat-block">
                    <div class="display stat bad huge">
                    </div>
                    <div class="details">
                        <div class="title">
                            Items in Cart
                        </div>
                        <hr>
                        <div class="numbers cart">
                            <input ng-model="numItems" disabled style="background: transparent; border: none;">
                        </div>
                    </div>
                </div>
            </div>


            <div id="shopping-cart" class="col-md-12">
            <div class="stats-overview stat-block">
                <div class="display stat ok huge">

                </div>
                <div class="details">

                    <div class="numbers">
                        PRODUCT SHOPPING CART
                    </div>
                    <hr>
                    <div class="title" style="padding-bottom: 10px; padding-top: 0px; margin-top: -7px;">
                        <div ng-if="numItems == 0">
                            <div style="padding-bottom: 10px; padding-top: 20px;">
                                No products currently in cart.
                            </div>
                        </div>
                        {% verbatim %}
<div ng-if="numItems != 0">
 <table id="cart-table" class="table table-striped table-bordered" cellspacing="0">
                                <thead>
                                <tr>
                                    <th width="12%">PRODUCT #</th>
                                    <th width="30%">DESCRIPTION</th>
                                    <th width="9%">RETURN REQUIRED</th>
                                    <th width="40%">LINE NUMBER (S)</th>
                                    <th width="9%">QUANTITY</th>
                                </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="item in cart track by $index">
                                    <div ng-if="angular.isobject(item)">
                                        <td >{{ item.stock_number }}</td>
                                        <td >{{ item.description }}</td>
                                        <td >
                                            <div ng-if="item.require_return == 1">
                                                <center><i class='fa fa-check-circle-o' style='font-size: 25px;color: #e2001a;'></i></center>
                                             </div>
                                        </td>
                                        <td >
{{ $index }}
                                        </td>
                           <td>
                                        <div class="row">
                                                <button ng-click="addItem(item.id)" style="background: transparent; border: none;">
                                                    <i class="fa fa-minus" style="font-size: 20px;color: #e2001a;"></i>
                                                </button>
                                            <center>
                                                {{ item.quantity }}
                                             </center>
                                                <button ng-click="addItem(item.id)" style="background: transparent; border: none;">
                                                    <i class="fa fa-plus" style="font-size: 20px;color: #e2001a;"></i>
                                                </button>
                                           </div>
                                        </td>

                                        </div>
                                    </tr>
                            </tbody>
                            </table>
                            </div>
                        {% endverbatim %}
                    </div>
                </div>
            </div>
        </div>

            <div class="col-md-12" style="margin-top: 30px;">
                <div class="stats-overview stat-block">
                    <div class="display stat ok huge">

                </div>
                    <div class="details">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="numbers">
                                    PRODUCT SEARCH
                                </div>
                            </div>
                            <div id='filters' class="col-md-5">
                                <select class="form-control">
                                    <option value="*">-- All Categories --</option>
                                    {% for category in categories %}
                                        <option value=".{{ category.nameCononical }}">{{ category.name }}</option>
                                    {% endfor %}
                                </select>

                        </div>
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="myInputTextField"
                                       placeholder="Search by product Description or Number">
                            </div>
                    </div>
                        <hr>
                        <div class="title" style="padding-bottom: 10px; padding-top: 10px;">
                            <table id="part-table" class="table table-striped  no-footer" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>PRODUCT #</th>
                                    <th width="40px">PHOTO</th>
                                    <th>DESCRIPTION</th>
                                    <th width="30px">RETURN REQUIRED</th>
                                    <th width="50px">ADD TO CART</th>
                                </tr>
                                </thead>
                                <tbody id="container">
                                {% for product in products %}
                                    <tr class="grid-item {{ product.partCategory.nameCononical }}">
                                        <td>{{ product.stockNumber }}</td>
                                        <td>
                                            <center>
                                                <i class="fa fa-camera" style="font-size: 22px;color: #e2001a;"></i>
                                            </center>
                                        </td>
                                        <td>{{ product.description }}</td>
                                        <td>{{ product.requireReturn ? "<center><i class='fa fa-check-circle-o' style='font-size: 25px;color: #e2001a;'></i></center>" : '' }}</td>
                                        <td>
                                            <center>
                                                <button ng-click="addItem({{ product.id }})"
                                                        style="background: transparent; border: none;">
                                                    <i class="fa fa-shopping-cart"
                                                       style="font-size: 25px;color: #e2001a;"></i>
                                                </button>
                                            </center>
                                        </td>
                                    </tr>
                            {% endfor %}
                                </tbody>
                            </table>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
{% endblock content %}

{% block footer %}
    <script>
        $(document).ready(function () {
            oTable = $('#part-table').DataTable({
                "paging": false,
                "sDom": '<"top">rt<"bottom"lp><"clear">'
            });
            $('#myInputTextField').keyup(function () {
                oTable.search($(this).val()).draw();
            })
        });
        $(function () {

            var $container = $('#container'),
                    $select = $('#filters select');

            $container.isotope({
                itemSelector: '.grid-item'
            });

            $select.change(function () {
                var filters = $(this).val();
                $container.isotope({
                    filter: filters,
                    animationEngine: 'css'
                });
            });

        });
        var app = angular.module("myShoppingList", []);
        app.controller("myCtrl", function ($scope) {
            $scope.numItems = 0;
            $scope.cart = [];
            $scope.products = [];

            $scope.init = function () {
                $.ajax({
                    beforeSend: function () {
                        console.log('json start');
                    },
                    type: 'GET',
                    url: "{{ path('json-get-products') }}",
                    success: function (data) {
                        $scope.products = data;
                        console.log($scope.products);
                    }
                });
            };
            $scope.inArray = function (item, array) {
                return array.indexOf(item);
            };
            $scope.addItem = function (item) {
                $scope.numItems += 1;
                tmp = $scope.inArray($scope.products[item], $scope.cart);
                if (tmp != -1)
                    $scope.cart[tmp].quantity += 1;
                else
                    $scope.cart.push($scope.products[item]);
                console.log($scope.cart);
            }
        });
    </script>
{% endblock footer %}