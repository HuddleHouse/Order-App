{% extends ":template:layout.html.twig" %}

{% block title %}Part Categories{% endblock %}

{% block page_title %}
    Part Categories
{% endblock page_title %}

{% block page_name %}
    Part Categories
{% endblock page_name %}

{% block content %}
    <div class="col-md-10">
        <button class="btn btn-success" style="margin-bottom: 15px;">
            <a href="{{ path('admin_partcategory_new') }}">Create a new entry</a>
        </button>
        <div class="table">
            <table id="part-table" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for partCategory in partCategories %}
                    <tr>
                        <td>{{ partCategory.name }}</td>
                        <td>
                            <ul>
                                <a class="btn btn-default btn-xs purple"
                                   href="{{ path('admin_partcategory_edit', { 'id': partCategory.id }) }}"><i
                                            class="fa fa-edit"></i> edit</a>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock content %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable();
        });
    </script>
{% endblock footer %}