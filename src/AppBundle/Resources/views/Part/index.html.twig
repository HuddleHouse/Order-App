{% extends ":template:layout.html.twig" %}

{% block title %}Part list{% endblock %}

{% block page_title %}
    Part list
{% endblock page_title %}

{% block page_name %}
    Part list
{% endblock page_name %}

{% block content %}
    <div class="" style="margin-right: 0px; margin-left: 0px;">
        <a class="btn btn-success" style="margin-bottom: 15px;" href="{{ path('admin_part_new') }}">Add a New Part</a>
        <div class="table">
            <table id="part-table" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Stocknumber</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Require Return</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for part in parts %}
                    <tr>
                        <td>{{ part.stockNumber }}</td>
                        <td>{{ part.description }}</td>
                        <td class="show-for-large-only">{{ part.partCategory.name }}</td>
                        <td class="show-for-large-only">{{ part.requireReturn ? 'Yes' : 'No' }}</td>
                        <td>
                            <ul>
                                <a class="btn btn-default btn-xs purple"
                                   href="{{ path('admin_part_edit', { 'id': part.id }) }}"><i class="fa fa-edit"></i>
                                    edit</a>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>


        </div>
    </div>

{% endblock content %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
                paging: false
            });
        });
    </script>
{% endblock footer %}