{% extends ":template:layout.html.twig" %}

{% block title %}Part list{% endblock %}

{% block page_title %}
    Part list
{% endblock page_title %}

{% block page_name %}
    Part list
{% endblock page_name %}

{% block content %}
    <div class="col-md-12">
        <button class="btn btn-success" style="margin-bottom: 15px;">
            <a href="{{ path('admin_part_new') }}">Create a new entry</a>
        </button>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-advance table-hover">
                <thead>
                <tr>
                    <th>Stocknumber</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for part in parts %}
                    <tr>
                        <td>{{ part.stockNumber }}</td>
                        <td>{{ part.description }}</td>
                        <td>{{ part.partCategory.name }}</td>
                        <td>
                            <ul>
                                <a class="btn btn-default btn-xs purple"
                                   href="{{ path('admin_part_edit', { 'id': part.id }) }}"><i class="fa fa-edit"></i>
                                    edit</a>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>


        </div>
    </div>

{% endblock content %}