{% extends ":template:layout.html.twig" %}

{% block title %}Part edit{% endblock %}

{% block page_title %}
    Part edit
{% endblock page_title %}

{% block page_name %}
    <a href="{{ path('admin_part_index') }}"><i class="fa fa-angle-left"></i>Back to the list</a>
{% endblock page_name %}

{% block content %}
    <style>
        form {
            display: inline;
        }

        #preview-pane {
            padding-bottom: 20px;

        }
    </style>
    <div class="col-md-6">


        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}

        {% if part.webPath %}
            <div id="preview-pane">
                <div class="preview-container">
                    <img src="/{{ part.webPath }}" width="150"/><br/>
                </div>
            </div>
        {% endif %}

        <input class="btn btn-success" type="submit" value="Update"/>
        {{ form_end(edit_form) }}
        {{ form_start(delete_form) }}
        <input class="btn btn-danger" type="submit" value="Delete">
        {{ form_end(delete_form) }}

    </div>

{% endblock content %}