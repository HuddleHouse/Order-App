{% extends ":template:layout.html.twig" %}
{% block title %}All Orders{% endblock title %}

{% block page_title %}


    <style>
        .page-bar {
            display: none;
        }
    </style>
{% endblock page_title %}

{% block page_name %}

{% endblock page_name %}

{% block content %}
    <div class="row" style="margin-bottom: 30px;">
        <div class="col-md-12">
            <center>
                <a class="btn btn-lg btn-primary" href="{{ path("user_home") }}">
                    Submit Another Order
                </a>
            </center>
        </div>
    </div>
    <div class="row">
        <div id="submitted" class="col-md-6">
            <div class="stats-overview stat-block">
                <div class="details">

                    <div class="numbers">
                        SUBMITTED ORDERS
                    </div>
                    <hr>
                    {% if submitted %}
                        <div class="title" style="padding-bottom: 10px; padding-top: 0px; margin-top: -7px;">
                            <table class="table table-striped table-hover" style="margin-top: 40px;">
                                <thead>
                                <tr>
                                    <th>
                                        ORDER #
                                    </th>
                                    <th class="hidden-480">
                                        DATE SUBMITTED
                                    </th>
                                    <th class="hidden-480"></th>
                                    <th class="hidden-480"></th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for item in submitted %}
                                    <tr>
                                        <td style="padding-top: 20px;">{{ item.orderNumber }}</td>
                                        <td style="padding-top: 20px;">{{ item.submitDate | date('m/d/Y') }}</td>
                                        <td style="padding-top: 20px;">
                                            <span class="label label-sm label-info">Review Pending</span>
                                        </td>
                                        <td style="padding-top: 20px;">
                                            <a class="btn btn-default btn-xs purple"
                                               href="{{ path('view_past_order', {'order_id': item.id}) }}">
                                                <i class="fa fa-book"></i> view
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="title" style="padding-bottom: 20px; padding-top: 20px;">
                            No submitted orders at this time.
                        </div>
                    {% endif %}

                </div>
            </div>
        </div>
        <div id="approved" class="col-md-6">
            <div class="stats-overview stat-block">
                <div class="details">

                    <div class="numbers">
                        APPROVED ORDERS
                    </div>
                    <hr>
                    {% if approved %}
                        <div class="title" style="padding-bottom: 10px; padding-top: 0px; margin-top: -7px;">
                            <table class="table table-striped table-hover" style="margin-top: 40px;">
                                <thead>
                                <tr>
                                    <th>
                                        ORDER #
                                    </th>
                                    <th class="hidden-480">
                                        DATE SUBMITTED
                                    </th>
                                    <th class="hidden-480">
                                        ITEMS SHIPPED
                                    </th>
                                    <th class="hidden-480"></th>
                                    <th class="hidden-480"></th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for item in approved %}
                                    <tr>
                                        <td style="padding-top: 20px;">{{ item.order_number }}</td>
                                        <td style="padding-top: 20px;">{{ item.submit_date | date('m/d/Y') }}</td>
                                        <td style="padding-top: 20px;">
                                            <center>{{ item.shipped }}</center>
                                        </td>
                                        <td style="padding-top: 20px;">
                                            <span class="label label-sm label-success">Approved</span>
                                        </td>
                                        <td style="padding-top: 20px;">
                                            <a class="btn btn-default btn-xs purple"
                                               href="{{ path('view_past_order', {'order_id': item.id}) }}">
                                                <i class="fa fa-book"></i> view
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="title" style="padding-bottom: 20px; padding-top: 20px;">
                            No approved orders at this time.
                        </div>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>
{% endblock content %}