{% extends ":template:layout.html.twig" %}
{% block title %}All Orders{% endblock title %}

{% block page_title %}


    <style>
        .page-bar {
            display: none;
        }
    </style>
{% endblock page_title %}

{% block actions %}

{% endblock actions %}

{% block content %}
    <a class="btn btn-primary btn-m purple" href="{{ path('prepare_a_return') }}" style="margin-bottom: 20px;"><i
                class="fa fa-plus"></i> Prepare a Return</a>

    <div class="row">
        <div id="submitted" class="col-md-12">
            <div class="portlet">
                <div class="portlet-title" style="background-color: #d9edf7 !important;">
                    <div class="caption">
                        PARTS THAT NEED TO BE RETURNED
                    </div>
                </div>
                <div class="portlet-body">
                    {% if to_be_returned %}
                        <div class="table-scrollable" style="padding-bottom: 10px; padding-top: 0px; margin-top: -7px;">
                            <table class="table table-striped table-hover" style="margin-top: 40px;">
                                <thead>
                                <tr>
                                    <th>ORDER #</th>
                                    <th class="hidden-480">DATE SUBMITTED</th>
                                    <th>APPROVED</th>
                                    <th class="hidden-480">STOCK #</th>
                                    <th class="hidden-480">DESCRIPTION</th>
                                    <th class="hidden-480">QUANTITY</th>
                                    <th class="hidden-480">ITEMS SHIPPED</th>
                                    <th class="hidden-480">SHIPPED</th>
                                    <th class="hidden-480"></th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for item in to_be_returned %}
                                    <tr>
                                        <td style="padding-top: 20px;">{{ item.order_number }}</td>
                                        <td style="padding-top: 20px;">{{ item.submit_date | date('m/d/Y') }}</td>
                                        <td style="padding-top: 20px;">
                                            {% if item.approved %}
                                                <span class="label label-sm label-success">Approved</span>
                                            {% else %}
                                                <span class="label label-sm label-info">Review Pending</span>
                                            {% endif %}
                                        </td>
                                        <td style="padding-top: 20px;">{{ item.stock_number }}</td>
                                        <td style="padding-top: 20px;">{{ item.description }}</td>
                                        <td style="padding-top: 20px;">
                                            <center>{{ item.quantity }}</center>
                                        </td>
                                        <td style="padding-top: 20px;">
                                            <center>{{ item.returned_items_shipped_quantity }}</center>
                                        </td>
                                        <td style="padding-top: 20px;">
                                            {% if item.quantity == item.returned_items_shipped_quantity %}
                                                <span class="label label-sm label-success">Shipped</span>
                                            {% else %}
                                                <span class="label label-sm label-info">Need to be Shipped</span>
                                            {% endif %}
                                        </td>
                                        <td style="padding-top: 20px;">
                                            <a class="btn btn-default btn-sm purple"
                                               href="{{ path('view_past_order', {'order_id': item.cart_id}) }}">
                                                <i class="fa fa-book"></i> view order
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="title" style="padding-bottom: 20px; padding-top: 20px;">
                            There are no parts that need to be sent to Uster.
                        </div>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div id="submitted" class="col-md-12">
            <div class="portlet">
                <div class="portlet-title" style="background-color: #dff0d8 !important;">
                    <div class="caption">
                        PARTS THAT HAVE BEEN RECEIVED BY USTER
                    </div>
                </div>
                <div class="portlet-body">
                    {% if have_been_returned %}
                        <div class="table-scrollable" style="padding-bottom: 10px; padding-top: 0px; margin-top: -7px;">
                            <table class="table table-striped table-hover" style="margin-top: 40px;">
                                <thead>
                                <tr>
                                    <th>ORDER #</th>
                                    <th class="hidden-480">DATE SUBMITTED</th>
                                    <th>APPROVED</th>
                                    <th class="hidden-480">STOCK #</th>
                                    <th class="hidden-480">DESCRIPTION</th>
                                    <th class="hidden-480">QUANTITY</th>
                                    <th class="hidden-480">ITEMS SHIPPED</th>
                                    <th class="hidden-480">ITEMS RECEIVED</th>
                                    <th class="hidden-480">SHIPPED</th>
                                    <th class="hidden-480"></th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for item in have_been_returned %}
                                    <tr>
                                        <td style="padding-top: 20px;">{{ item.order_number }}</td>
                                        <td style="padding-top: 20px;">{{ item.submit_date | date('m/d/Y') }}</td>
                                        <td style="padding-top: 20px;">
                                            {% if item.approved %}
                                                <span class="label label-sm label-success">Approved</span>
                                            {% else %}
                                                <span class="label label-sm label-info">Review Pending</span>
                                            {% endif %}
                                        </td>
                                        <td style="padding-top: 20px;">{{ item.stock_number }}</td>
                                        <td style="padding-top: 20px;">{{ item.description }}</td>
                                        <td style="padding-top: 20px;">
                                            <center>{{ item.quantity }}</center>
                                        </td>
                                        <td style="padding-top: 20px;">
                                            <center>{{ item.returned_items_shipped_quantity }}</center>
                                        </td>
                                        <td style="padding-top: 20px;">
                                            <center>{{ item.returned_items_quantity }}</center>
                                        </td>
                                        <td style="padding-top: 20px;">
                                            {% if item.quantity == item.returned_items_shipped_quantity %}
                                                <span class="label label-sm label-success">Shipped</span>
                                            {% else %}
                                                <span class="label label-sm label-info">Need to be Shipped</span>
                                            {% endif %}
                                        </td>
                                        <td style="padding-top: 20px;">
                                            <a class="btn btn-default btn-xs purple"
                                               href="{{ path('view_past_order', {'order_id': item.id}) }}">
                                                <i class="fa fa-book"></i> view
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="title" style="padding-bottom: 20px; padding-top: 20px;">
                            Uster has not received any parts from you yet.
                        </div>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>
{% endblock content %}